@model Noticia.Models.Topicos

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Tópicos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        @if (Model.ListaNT.Count == 0)
        {
            <table class="table">
                <tr>Este topico não tem noticias</tr>
            </table>
        }
        else
        {
            <table class="table">
                <tr>Lista de noticias</tr>
                <tr>
                    @foreach (var img in Model.ListaNT)
                    {
                        <td>
                            @img.Noticias.Titulo
                        </td>

                        <td>
                            @img.Noticias.Data_De_Publicacao
                        </td>

                    }
                </tr>
            </table>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Voltar</a>
</div>
