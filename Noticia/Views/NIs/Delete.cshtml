@model Noticia.Models.NI

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Deseja apagar isto?</h3>
<div>
    <h4>NI</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Noticias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Noticias.Titulo)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagens)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagens.Legenda)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Noticiasid" />
        <input type="hidden" asp-for="Imagensid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
