@model Noticia.Models.NI

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Associar imagens a notícias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Noticias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Noticias.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagens)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagens.Legenda)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { notic = @Model.Noticiasid, img = @Model.Imagensid }) |
    <a asp-action="Index">Voltar</a>
</div>
