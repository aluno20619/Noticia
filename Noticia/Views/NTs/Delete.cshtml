@model Noticia.Models.NT

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Deseja apagar isto?</h3>
<div>
    <h4>Associar topico a Noticia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Noticias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Noticias.Titulo)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topicos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topicos.Nome)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Noticiasid" />
        <input type="hidden" asp-for="Topicosid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
