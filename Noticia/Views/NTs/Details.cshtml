@model Noticia.Models.NT

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Associar topico a Noticia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Noticias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Noticias.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topicos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topicos.Nome)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Edit", "Edit",new { notic = @Model.Noticiasid ,topic= @Model.Topicosid})|
    <a asp-action="Index">Voltar</a>
</div>
